@model Villa

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete villa</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <div class="p-3">
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" type="text" disabled class="form-control border shadow" />
                    <label asp-for="Name" class="ms-2"></label>                  
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" type="text" disabled class="form-control border shadow" />
                    <label asp-for="Description" class="ms-2"></label>  
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" type="text" disabled class="form-control border shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Sqft" type="text" disabled class="form-control border shadow" />
                    <label asp-for="Sqft" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ImageUrl" type="text" disabled class="form-control border shadow" />
                    <label asp-for="ImageUrl" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Occupancy" type="text" disabled class="form-control border shadow" />
                    <label asp-for="Occupancy" class="ms-2"></label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-house-check-fill"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-trash3-fill"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
